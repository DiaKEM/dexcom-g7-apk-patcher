<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="@color/dex_gray_200" android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <size android:height="6.0dip" />
            <solid android:color="@color/dex_gray_200" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:tint="@color/dex_orange_500" android:shape="rectangle">
                <corners android:radius="3.0dip" />
                <size android:height="6.0dip" />
                <solid android:color="@color/dex_orange_500" />
            </shape>
        </scale>
    </item>
</layer-list>